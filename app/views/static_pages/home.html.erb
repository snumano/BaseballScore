<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= link_to 'New Score', new_score_path %>
      </section>
    </aside>
    <div class="span8">
      <% if current_user.scores.any? %>
        <h3>Scores (<%= current_user.scores.count %>)</h3>
        <ul class="scores">
          <%= render partial: 'scores/score', collection: current_user.scores %>
        </ul>
        <%= will_paginate @scores %>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to the Baseball Score</h1>
    <h2>This is the home page for the Baseball Score</h2>
    <%= link_to "Sign up now!", new_user_registration_path, class: "btn btn-large btn-primary" %>
  </div>

  <%= link_to image_tag("baseball_score.png", alt: "Score"), 'http://score.workaround.jp/' %>
<% end %>
