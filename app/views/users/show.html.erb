<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.scores.any? %>
      <h3>Scores (<%= @user.scores.count %>)</h3>
      <ul class="scores">
        <%= render @scores %>
      </ul>
      <%= will_paginate @scores %>
    <% end %>
  </div>
</div>
