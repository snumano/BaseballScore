<% provide(:title, @user.name) %>
<div class="container-fluid">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>

    <% if current_user?(@user) %>
      <section>
        <%= link_to 'New Score', new_score_path %>
      </section>
    <% end %>

    <% if @user.scores.any? %>
      <h3>Scores (<%= @user.scores.count %>)</h3>
      <%= render @scores %>
      <%= will_paginate @scores %>
    <% end %>
</div>
