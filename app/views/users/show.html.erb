<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <span>
        <%= pluralize(current_user.scores.count, "score") %>
      </span>
    </section>

    <% if current_user?(@user) %>
      <section>
        <%= link_to 'New Score', new_score_path %>
      </section>
    <% end %>

  </aside>
  <div class="span8">
    <% if @user.scores.any? %>
      <h3>Scores (<%= @user.scores.count %>)</h3>
      <ul class="scores">
        <li>
          <%= render @scores %>
        </li>
      </ul>
      <%= will_paginate @scores %>
    <% end %>
  </div>
</div>
